{
    "compilerOptions": {
      "module": "commonjs",
      "declaration": true,
      "removeComments": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "allowSyntheticDefaultImports": true,
      "target": "es2021",
      "sourceMap": true,
      "outDir": "./dist",
      "incremental": true,
      "skipLibCheck": true,
      "resolveJsonModule": true,
      "esModuleInterop": true
    },
    "exclude": ["node_modules", "**/*.test.ts"]
  }
  